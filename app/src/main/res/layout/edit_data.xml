<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal|left|center_vertical">

    <TextView
        android:id="@+id/fixDate_1"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginTop="88dp"
        android:gravity="center_horizontal|left|center_vertical"
        android:text="日期"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fixDate_2"
        android:layout_width="267dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toEndOf="@+id/fixDate_1"
        app:layout_constraintTop_toTopOf="@+id/fixDate_1" />

    <EditText
        android:id="@+id/fixLocation_3"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.243"
        app:layout_constraintStart_toEndOf="@+id/fixLocation_2"
        app:layout_constraintTop_toTopOf="@+id/fixLocation_1" />

    <EditText
        android:id="@+id/fixLocation_2"
        android:layout_width="130dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:inputType="numberSigned|number|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/fixLocation_1"
        app:layout_constraintTop_toTopOf="@+id/fixLocation_1" />

    <TextView
        android:id="@+id/fixLocation_1"
        android:layout_width="70dp"
        android:layout_height="44dp"
        android:layout_marginTop="32dp"
        android:gravity="center|center_horizontal|left|center_vertical"
        android:text="坐标"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixDate_2" />

</androidx.constraintlayout.widget.ConstraintLayout>